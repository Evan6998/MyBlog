include header

.ui.grid
  .four.wide.column
    a.avatar(href="/posts?author=#{user._id}"
             data-title="#{user.name} | ({m: 'male', f: 'female', x: 'secrecy'})[user.gender]"
             data-content="#{user.bio}")
      img.avatar(src="/images/#{user.avatar}")
  .eight.wide.column
    form.ui.form.segment.piled(method="post")
      .field.required
        lable title
        input(type="text" name="title" value="#{post.title}")
      .field.required
        lable content
        textarea(name="content" type="text" rows="15") #{post.content}
      input.ui.button(type="submit" value="submit")

include footer
